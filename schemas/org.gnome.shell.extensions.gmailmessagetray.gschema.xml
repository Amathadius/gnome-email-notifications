<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions-gmailmessagetray">
    <schema path="/org/gnome/shell/extensions/gmailmessagetray/" id="org.gnome.shell.extensions.gmailmessagetray">
        <key type="i" name="usemail">
            <default>0</default>
            <summary>Use default email client instead of browser</summary>
            <description>Use default email client instead of browser.</description>
        </key>
        <key type="i" name="timeout">
            <default>300</default>
            <summary>Check mail every (sec):</summary>
            <description>Check mail every (sec):</description>
        </key>
        <key type="i" name="shownomail">
            <default>1</default>
            <summary>Shows "No new emails" notification</summary>
            <description>Shows "No new emails" notification</description>
        </key>
        <key type="s" name="showsummary">
            <default>"yes"</default>
            <summary>Show email summary</summary>
            <description>If email summary not shown, individual emails are shown</description>
        </key>
        <key type="ai" name="messagesshown">
            <default>[]</default>
            <summary>Stores hashes of all messages shown</summary>
            <description>Stores int32 hashes of all messages shown so they don't get shown again</description>
        </key>
    </schema>
</schemalist>
